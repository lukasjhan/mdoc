{
  "name": "@animo-id/mdoc",
  "description": "Animo Mdoc and MDL",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd",
  "author": "Animo Solutions",
  "exports": "./src/index.ts",
  "version": "0.5.2",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "types:check": "tsc --noEmit",
    "style:check": "biome check --unsafe",
    "style:fix": "biome check --write --unsafe",
    "build": "tsdown src/index.ts --format cjs,esm --dts --clean --sourcemap",
    "test": "vitest",
    "release": "pnpm build && pnpm changeset publish --no-git-tag",
    "changeset-version": "pnpm changeset version && pnpm style:fix"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@changesets/cli": "^2.29.7",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "@panva/hkdf": "^1.2.1",
    "@peculiar/x509": "^1.14.0",
    "@types/node": "^24.10.0",
    "jose": "^6.1.0",
    "tsdown": "^0.16.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/animo/mdoc"
  },
  "keywords": [
    "mdl",
    "iso-18013-5",
    "iso-18013-7",
    "m-doc",
    "m-doc-cbor",
    "m-doc-cbor-parser",
    "m-doc-cbor-validator",
    "m-doc-cbor-encoder",
    "m-doc-cbor-decoder",
    "m-doc-cbor-iso-18013-5",
    "m-doc-cbor-iso-18013-5-parser",
    "m-doc-cbor-iso-18013-5-validator",
    "m-doc-cbor-iso-18013-5-encoder",
    "m-doc-cbor-iso-18013-5-decoder"
  ]
}
